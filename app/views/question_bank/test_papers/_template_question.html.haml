.template.question
  %li.hidden
    .clearfix
      {{content}}
      %a.question_move_up{href: 'javascript:;'}
        %i.glyphicon.glyphicon-arrow-up
      %a.question_move_down{href: 'javascript:;'}
        %i.glyphicon.glyphicon-arrow-down
      %a.question_destroy{href: 'javascript:;'}
        %i.glyphicon.glyphicon-remove.red

    %input.hidden.form-control{type: 'hidden', name: 'test_paper[sections_attributes][{{section_index}}][section_questions_attributes][{{question_index}}][question_id]', value: "{{question_id}}"}
